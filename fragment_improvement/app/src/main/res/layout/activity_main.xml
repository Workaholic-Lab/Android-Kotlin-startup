<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rad_dialog_type">
    <RadioButton
        android:id="@+id/rad_dialog_alter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/rad_dialog_alter"/>
    <RadioButton
        android:id="@+id/rad_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/rad_dialog_date"/>
    <RadioButton
        android:id="@+id/rad_dialog_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/rad_dialog_time"/>
</RadioGroup>

    <Button
        android:id="@+id/btn_create_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_create_dialog"
        android:textAllCaps="false"/>

    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#000fff"/>

</LinearLayout>